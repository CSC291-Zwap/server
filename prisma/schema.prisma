generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

enum Category {
  fashion
  electronic
  kitchen
  others
}

model Item {
  id          String   @id @default(uuid())
  prod_name   String?
  description String
  price       Float?
  pick_up     String?
  city        String?
  category    Category @default(fashion)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  images      Image[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        String   @id @default(uuid())
  url       String
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}